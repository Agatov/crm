= simple_form_for meeting, url: url do |f|

  .form-group
    %label Место встречи
    %input.form-control{type: :text, name: 'meeting[address]', value: meeting.address, placeholder: 'Место встречи'}
  .form-group
    %label Дата
    %input.form-control.meeting-date{type: :date_string, name: :date, 'data-behaviour' => 'datepicker', placeholder: 'Дата встречи'}

  .form-group
    = f.input :date, as: :time

  .form-group
    %label Заметки
    %textarea.form-control

  = f.input :client_id, as: :hidden

  %button.btn.btn-success{type: :submit}
    Готово
